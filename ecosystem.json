        "MAILGUN_DOMAIN": "https://api.mailgun.net/v3/photogramapp.com",
        "MAILGUN_FROM_ADDRESS": "postmaster@photogramapp.com",
        // (optional) - ONE SIGNAL for Send Push Notifications
        "ONE_SIGNAL_APP_ID": "d13d00d0-013f-406f-9811-66ce0737d7bc",
        "ONE_SIGNAL_REST_API_KEY": "ZjQxOTEyMDQtN2QwOC00Nzg3LTgxZjctYmEwNjdhN2QwYWVl"
      }
    },
